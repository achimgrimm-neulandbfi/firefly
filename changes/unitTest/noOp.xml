<?xml version="1.0" encoding="UTF-8"?>
<changeDescription xmlns="http://firefly.neuland-bfi.de/v1">
    <beanShell author="jUnit" id="1" description="Ich bin ein BeanShell Änderung">
        print("Hallo Welt");
        print(ctx.getBeanDefinitionNames().length);
    </beanShell>
    <groovy author="jUnit" id="2" description="Langlaufende Groovy-Änderung"><![CDATA[
        (1..100).each {
            print '.'
            if (it % 10 == 0) {
                println it
            }
            System.sleep(50)
        }
    ]]></groovy>
    <sql author="jUnit" id="3" description="SQL Select-Statement">
        SELECT COUNT(p_name) AS EXTENSION_COUNT FROM FireflyExtension;
    </sql>
    <sql author="jUnit" id="4" description="SQL-Update-Statement">
        UPDATE FireflyExtension SET p_name = p_name;
    </sql>
    <impEx author="jUnit" id="5" description="ImpEx-Änderung"><![CDATA[
        INSERT_UPDATE FireflyExtension;name[unique=true]
        ;firefly
    ]]></impEx>
    <sql author="jUnit" id="6" description="Change with precondition" precondition="fireflyContext" onPreconditionFail="MARK_RAN">
        print("I will be skipped");
    </sql>
    <sql author="jUnit" id="7" description="Change with SQL precondition" precondition="sql" onPreconditionFail="MARK_RAN">
        println 'I will not be skipped'
    </sql>
    <sql author="jUnit" id="8" description="Change with flex search as precondition" precondition="flex" onPreconditionFail="MARK_RAN">
        println 'I will not be skipped'
    </sql>
    <precondition id="fireflyContext">
        fireflyContext.FIREFLY_JUNIT
    </precondition>
    <precondition id="sql">
        sql.rows("SELECT p_name FROM FireflyExtension WHERE p_name='firefly-junit'").isEmpty()
    </precondition>
    <precondition id="flex">
        ctx.getBean('flexibleSearchService').search("""
            SELECT {pk} FROM {FireflyExtension} WHERE {name} = 'firefly-junit'
        """).count == 0
    </precondition>
</changeDescription>
